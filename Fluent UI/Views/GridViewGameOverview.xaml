                                                <Button Grid.Column="1" Grid.Row="1" x:Name="PART_ButtonSource" TextOptions.TextRenderingMode="Aliased"  Style="{DynamicResource SimpleButton}" ToolTip="{DynamicResource LOCSourceLabel}" Margin="0" Width="Auto" FontFamily="Trebuchet MS" Foreground="{DynamicResource TextBrush}" Opacity="1" VerticalAlignment="Center" HorizontalAlignment="Center" BorderThickness="0" ClipToBounds="False" Padding="10,14,10,0" FontStyle="Italic" >
                                                    <Button.Effect>
                                                        <DropShadowEffect BlurRadius="5" ShadowDepth="1"/>
                                                    </Button.Effect>
                                                </Button>
                                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                                                    <Image Name="PART_ImageIcon" MaxHeight="100" MaxWidth="200" Stretch="Uniform"                                                     
                                                                                    VerticalAlignment="Stretch" RenderOptions.BitmapScalingMode="Fant" Margin="0,5,0,0" />
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding ElementName=SecondIcon, Path=Visibility}" Value="Visible"/>
                                                                        <Condition Binding="{Binding ElementName=SecondTitleStack, Path=Visibility}" Value="Visible"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                </Grid>
                                                <Grid>

                                                    <TextBlock x:Name="LogoPath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="Text">
                                                                    <Setter.Value>
                                                                        <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                            <Binding Source="\ExtraMetadata\games\"/>
                                                                            <Binding Path="Game.Id"/>
                                                                            <Binding Source="\logo.png" />
                                                                        </MultiBinding>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Image x:Name="LogoImage" Panel.ZIndex="1" MaxWidth="{DynamicResource GridViewLogoMaxWidth}" MaxHeight="{DynamicResource GridViewLogoMaxHeight}" 
                                           Visibility="{DynamicResource GridViewLogoVisibility}" Stretch="Uniform" RenderOptions.BitmapScalingMode="Fant" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           StretchDirection="DownOnly" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}" Margin="0" >
                                                        <Image.Style>
                                                            <Style TargetType="{x:Type Image}">
                                                                <Setter Property="Source" Value="{Binding Text, ElementName=LogoPath}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                                                                        <Setter Property="Source" Value="{Binding Text, Converter={StaticResource ImageStringToImageConverter}, ElementName=LogoPath}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
