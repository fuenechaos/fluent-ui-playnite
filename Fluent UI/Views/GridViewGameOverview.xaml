                                                    <TextBlock.Effect>
                                                        <DropShadowEffect BlurRadius="5" ShadowDepth="1"/>
                                                    </TextBlock.Effect>
                                                </TextBlock>
                                                <Grid Margin="0,10,0,0" Height="Auto" VerticalAlignment="Center" Width="Auto" Grid.Column="1" HorizontalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>


                                                    <Button x:Name="PART_ButtonPlayAction" Style="{DynamicResource PlayButton}" Width="115" Height="35" Cursor="Hand" Grid.Column="0" Margin="0,0,0,0" Grid.Row="0" UseLayoutRounding="True" Visibility="Visible" HorizontalAlignment="Center">

                                                    </Button>
                                                    <Button x:Name="PART_ButtonContextAction" Style="{DynamicResource ContextButtonCustom}" Width="115" Height="35" Cursor="Hand" Grid.Column="0" Margin="0,0,0,0" Grid.Row="0" UseLayoutRounding="True" Visibility="Visible" HorizontalAlignment="Center"  >

                                                    </Button>
                                                </Grid>
