                                            Height="Auto" Grid.Column="1" Width="Auto" Grid.RowSpan="3" FontFamily="{DynamicResource SymbolFont}" Content="&#xE10C;" VerticalAlignment="Center" Margin="0,10,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="{DynamicResource FontSizeLarger}" >
                                                    <Button.Effect>
                                                        <DropShadowEffect ShadowDepth="1" BlurRadius="2"/>
                                                    </Button.Effect>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="0"  Grid.Row="1" Height="Auto" Width="Auto" Visibility="Visible" VerticalAlignment="Stretch" Background="{x:Null}" Margin="45,45,45,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid MinWidth="{DynamicResource GameOverviewSide}" Grid.Column="0"/>
                                            <Grid MinWidth="{DynamicResource GameOverviewSide}" Grid.Column="2"/>
                                            <Grid MinHeight="{DynamicResource GameOverviewBottom}" Grid.Row="1"/>

                                            <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,0,0" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid  Background="{DynamicResource GridDetailsBrush}" HorizontalAlignment="Left">
                                                    <TabItem Style="{StaticResource TabItemCustom}"  Header="Achievements" Visibility="Hidden" Margin="0" />
                                                    <Grid Name="OverviewGrid" Margin="0,10,0,10" />
                                                </Grid>
                                                <TabControl Grid.Column="0" Margin="0,20,0,0" x:Name="TabContrel" TabStripPlacement="Left" Background="Transparent" BorderBrush="Transparent">

                                                    <TabItem Name="Tab" Style="{StaticResource TabItemCustom}" Header="Overview" BorderBrush="{DynamicResource GridDetailsBrush}" >
